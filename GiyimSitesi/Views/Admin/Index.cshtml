@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<br />
<br />
<div class="row">

    <div class="container col-11">
        <div class="card">
            <br />

            <div class="container-fluid">
                <h3>MESAJLAR</h3>
                <hr />
            </div>

            <div class="card-body table-responsive p-0">
                <table id="urunlerTable" class="table table-striped table-valign-middle">
                    <thead>
                        <tr>
                            <th>İsim</th>
                            <th>Soyisim</th>
                            <th>E-mail</th>
                            <th>Mesaj</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Iletisim)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td><a href="mailto:@item.Email">@item.Email</a></td>
                                <td>@item.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

