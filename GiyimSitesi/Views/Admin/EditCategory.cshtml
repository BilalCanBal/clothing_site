
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@model Category


<div class="row">

    <div class="container col-10">
        <br />
        <div class="card">
            <br />
            <div class="container-fluid">
                <h3>Kategori Düzenle</h3>

            </div>
            <hr />
            <div class="card-body">

                <form method="post" asp-controller="Admin" asp-action="EditCategory" enctype="multipart/form-data">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="form-group">
                        <label for="Name">Kategori Adı:</label>
                        <input asp-for="Name" type="text" class="form-control" id="Name" name="Name" placeholder="Kategori adını girin">
                    </div>

                    <div class="form-group card card-primary">
                        <div class="row align-items-center">
                            <div class="col-md-6 col-sm-12 text-center mb-3">
                                <img id="previewImage" src="~/images/@Model.ImgUrl" alt="Kategori Resmi" style="max-width: 150px; max-height: 150px;">
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <label for="file" class="form-label">Resim:</label>
                                <input type="file" name="file" id="file" class="form-control-file">
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Kategori Güncelle</button>
                </form>

                


            </div>
        </div>
    </div>
</div>

