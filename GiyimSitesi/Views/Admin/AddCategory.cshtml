@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="row">

    <div class="container col-10">
        <br />
        <div class="card">
            <br />
            <div class="container-fluid">
                <h3>Kategori Ekle</h3>

            </div>
            <hr />
            <div class="card-body">

                <form method="post" asp-controller="Admin" asp-action="AddCategory" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Name">Kategori Adı:</label>
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Kategori adını girin">
                    </div>
                    <div class="form-group card card-primary">
                        <label for="Img">Resim:</label>
                        <input type="file" name="file" required="required" accept="image/*">
                    </div>
                    <button type="submit" class="btn btn-primary">Kategori Ekle</button>
                </form>

            </div>
        </div>
    </div>
</div>


