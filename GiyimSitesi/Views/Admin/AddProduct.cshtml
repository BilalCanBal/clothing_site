@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@model Product



<div class="row">

    <div class="container col-10">
        <br />
        <div class="card">
            <br />
            <div class="container-fluid">
                <h3>Ürün Ekle</h3>

            </div>
            <hr />
            <div class="card-body">


                <div class="container-fluid">
                    <form method="post" asp-controller="Admin" asp-action="AddProduct" enctype="multipart/form-data">
                        <div class="form-group card card-primary">
                            <label for="Name">Ürün Adı:</label>
                            <input required="required" asp-for="Name" type="text" class="form-control" id="Name" name="Name" placeholder="Ürün adını girin">
                        </div>



                        <textarea class="tinymce-editor" name="Description">

                        </textarea><!-- End TinyMCE Editor -->

                        <div class="form-group card card-primary">
                            <label for="Price">Fiyat:</label>
                            <input required="required" asp-for="Price" type="text" class="form-control" id="Price" name="Price" placeholder="Ürün fiyatını girin">
                        </div>

                        <div class="form-group card card-primary">
                            <label for="Img">Resim:</label>
                            <input type="file" name="file" required="required" accept="image/*">
                        </div>

                        <div class="form-group card card-primary">
                            <label>Kategori Seç</label>
                            <select required="required" asp-for="CategoryId" name="CategoryId" class="form-control">
                                <option disabled selected>Lütfen kategori seçiniz</option>
                                @foreach (var item in ViewBag.Kategoriler)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Ürün Ekle</button>
                    </form>
