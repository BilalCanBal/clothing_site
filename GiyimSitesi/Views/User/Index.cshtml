<div class="site-section block-3 site-blocks-2 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>Kategoriler</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="nonloop-block-3 owl-carousel">
                    @foreach (var item in (List<GiyimSitesi.Context.Entity.Category>)ViewBag.Kategoriler)
                    {
                        <div class="item">
                            <div class="block-4 text-center">
                                <form method="post" asp-controller="User" asp-action="Categories">
                                    <input type="hidden" name="collectionType" value="@item.Id" />
                                    <button type="submit" class="block-2-item" style="border: none; background: none; padding: 0;">
                                        <figure class="image">
                                            <img src="~/images/@item.ImgUrl" alt="@item.Name" style="height: 455.27px; width: 346.66px;" class="img-fluid">
                                        </figure>
                                        <div class="text">
                                            <span class="text-uppercase"></span>
                                            <h3>@item.Name</h3>
                                        </div>
                                    </button>
                                </form>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>


